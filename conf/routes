# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index(message: Option[String])
GET         /game/new            controllers.GameController.newGame()
POST        /game/new            controllers.GameController.createGame()
GET         /game/:id            controllers.GameController.game(id: Long)

GET         /player              controllers.PlayerController.player()
POST        /player/add          controllers.PlayerController.add()

GET         /location            controllers.LocationController.location()
POST        /location/add        controllers.LocationController.add()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

